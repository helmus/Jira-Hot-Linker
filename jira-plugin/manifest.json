{
  "name": "Jira HotLinker",
  "description": "Jira HotLinker, quick access to Jira metadata when hovering over ticket numbers!",
  "version": "1.4",
  "manifest_version": 2,
  "icons": {
    "128": "icons/jiralink128.png"
  },
  "minimum_chrome_version": "60",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end",
      "js": [
        "build/main.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "resources/*"
  ],
  "permissions": [
    "storage",
    "cookies"
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  }
}
